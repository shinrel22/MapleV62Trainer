<LoginScreen>:
    GridLayout:
        size_hint: (0.5, 0.5)
        pos: (root.center_x - self.width/2, root.center_y - self.height/2)
        rows: 4
        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 0.5)
            Label:
                text: "MapleStory v62 Trainer V1.0"
                font_size: "30"

            Label:
                text: "Login your XoanTools account"
                font_size: "20"

            Label:
                text: "If you don't have, get one from www.XoanTools.com"

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.2)
            Label:
                text: "Username"
            TextInput:
                font_size: self.height * 3/4
                multiline: False
                height: 30

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.2)
            Label:
                text: "Password"
            TextInput:
                font_size: self.height * 3/4
                password: True
                multiline: False
                height: 30
